gris0 = #3c3c3e
gris1 = #4c4c4e
gris2 = #626264
rojo1 = #e7344a

.gris0
	color gris0
.gris1
	color gris1
.gris2
	color gris2
.rojo1
	color rojo1
img
	width 100%
	height auto
.mayus
	text-transform uppercase
.bold
	font-weight bold
.rajdhani
	font-family 'Rajdhani', sans-serif
.m-top-60
	margin-top 60px
.p-left-0
	padding-left 0
body
	background #f5f5f5
	color gris1
	font-family 'Roboto', sans-serif
#masthead
	background gris1
	position fixed
	width 100%
	z-index 100
	transition background .4s ease
	top 0
#masthead.transparent
	.navbar
		background rgba(gris1, .95) !important
		transition background .7s ease
.navbar
.menu-menu-top-container
	background gris1
	display flex
	justify-content flex-start
	align-items center
	border none
	margin-bottom 0
	z-index 100
	width 100%
	position absolute
	text-transform uppercase
	transition background .4s ease
	border-bottom 2px solid rojo1
.navbar-brand
	padding 10px 15px
.navbar-toggler
	background none
	border none
	width 30px
	height 30px
	position absolute
	right 15px
	padding 0
	transition background .4s ease
	.icon-bar
		background rojo1
		width 100%
		height 4px
		margin 5px 0
		display block
.navbar-collapse
	width 100%
	position fixed
	top 50px
	background gris1
	border none
	left 0
	padding-left 0
	li
		display block
		margin-bottom 5px
		margin-top 5px
		a
			color white
		&:first-of-type
			margin-top 15px
		&:last-of-type
			margin-bottom 15px
.main-banner-container
	height 460px
	background rgba(gris1, .1)
	display block
h1
	text-transform uppercase
	font-weight bold
	font-size 2.2em
	line-height 1em
	span
		color rojo1
		font-size .7em
h2.home-title
	font-size 1.2em
	&::before
		content ''
		width 50px
		height 1px
		background gris1
		position absolute
		bottom 0
.featured-product
	background rgba(gris1, .5)
	height 220px
	position relative
	padding-left 0
	padding-right 0
	display flex
	flex-direction row
	transition height .5s ease
	&.even
		flex-direction row-reverse
		.plus
			justify-content flex-end
			a
				margin-right 10px
	&.one
		background transparent url(./images/01-text1.jpg) no-repeat center center
		background-size cover
		.info-container
			background transparent url(./images/01-text1-ej-squashed.jpg) no-repeat center center
			background-size cover
	&.two
		background transparent url(./images/01-text2.jpg) no-repeat center center
		background-size cover
		.info-container
			background transparent url(./images/01-text2-ej-squashed.png) no-repeat center center
			background-size cover
	&.three
		background transparent url(./images/01-text3.jpg) no-repeat center center
		background-size cover
		.info-container
			background transparent url(./images/01-text3-ej-squashed.jpg) no-repeat center center
			background-size cover
	&.four
		background transparent url(./images/01-text4.jpg) no-repeat center center
		background-size cover
		.info-container
			background transparent url(./images/01-text4-ej-squashed.jpg) no-repeat center center
			background-size cover
	.info-container
		width 35%
		height 100%
		display flex
		align-items center
		.alpha-layer
			background rgba(black, .6)
			color white
			padding 10px
			width 100%
		p.title
			margin-bottom 0
		p.description
			display none
	.plus
		height 100%
		width 65%
		display flex
		align-items center
		a
			margin-left 10px
		img
			width 22px
			height auto
			display block
.item-promo
	img
		width 100%
		height auto
		display block
.form-control
	background gris0
	border none
	color white
	border-radius 0
.btn.btn-primary
	border 1px solid rojo1
	background none
	border-radius 0
	color white
	width 100%
	text-transform uppercase
	font-weight 100
textarea
	resize none
/*NOSOTROS*/
.inner-section-banner
	height 450px
	background-color gris1
	display block
	background-position -120px center
	background-size cover
	&.encuentranos
	&.productos
		background-position center center
.video-container
	position relative
	width 100%
	height 0
	padding-bottom 56.25%
.video
	position absolute
	top 0
	left 0
	width 100%
	height 100%
#map-showroom
#map-warehouse
	width 100%
	height 250px
	display block
	background rgba(gris1, .5)
.how-to-get-there
	width 100%
	background rojo1
	color white
	text-transform uppercase
	text-align center
	display block
	padding 5px 0
	letter-spacing 1px
	transition color .5s ease
	&:hover
		color rgba(white, .7)
		transition color .5s ease
		text-decoration none
.collection
	.image
		height 130px
		display block
		width 100%
		background-size 320px
		background-position center bottom
		background-repeat no-repeat
		&.natural
			background-image url(./images/coleccion-piedra.jpg)
		&.wood
			background-image url(./images/coleccion-madera.jpg)
		&.neolith
			background-image url(./images/coleccion-neolith.jpg)
	.view-collection
		text-align right
		a
			text-decoration underline
footer
	border-top 3px solid rojo1
	background gris1
	margin-top 50px
	padding-top 30px
	padding-bottom 30px
	p.footer-title
		color white
		text-transform uppercase
		position relative
		&::before
			content ''
			width 50px
			height 1px
			background white
			bottom 0
			position absolute
	.subscribe-form
	.social-links-container
	.footer-contact-form
	.footer-menu-block
		padding-bottom 10px
		margin-bottom 30px
		border-bottom 2px solid gris2
	.social-links
		padding 0
		margin 0
		text-align center
		li
			display inline-block
			margin 0 5px
			a
				color rojo1
				font-size 2em
	.footer-menu
		ul
			padding 0
			margin 0
			li
				margin-bottom 7px
				a
					color white
					text-transform uppercase
					text-decoration underline
	.disclaimer
		color white
		text-transform uppercase
		text-align center
		font-size .8em
		a
			color white
@media screen and (min-width: 510px)
	.featured-product
		height 320px
		transition height .5s ease
	.collection
		.image
			height 200px
			background-size 420px
			transition all .5s ease
@media screen and (min-width: 610px)
	.collection
		.image
			height 270px
			background-size 520px
			transition all .5s ease
@media screen and (min-width: 768px)
	.navbar-toggler
		display none
	.navbar
		display flex
		border-radius 0
	.menu-main-menu-container
		width 100%
		display inline-block
	.navbar-collapse
		position relative
		top 0
		background none
		text-align right
		margin 0
		display flex
		li
			display inline-block
			margin 0 5px
			&:first-of-type
				margin-top 0
			&:last-of-type
				margin-bottom 0
	.main-banner-container
		height 720px
	h1
		font-size 3.2em
		line-height 0.8em
	h2.home-title
		font-size 1.4em
	.featured-product
		height 270px
		&.even
			flex-direction row
			.plus
				justify-content flex-start
				a
					margin-right 10px
	/*NOSOTROS*/
	.inner-section-banner
		height 770px
		background-position -20px center
	.collection
		.image
			height 240px
			background-size 625px
			transition all .5s ease
	footer
		.social-links
			li
				margin 0 20px
				a
					font-size 2.6em
@media screen and (min-width: 992px)
	textarea.form-control
		height 120px
	/*NOSOTROS*/
	.inner-section-banner
		background-position center center
	.collection
		.image
			height 140px
			background-size cover
			transition all .5s ease
	footer
		.social-links
			text-align left
			li
				margin 0 20px 0 0
		.subscribe-form
		.social-links-container
		.footer-contact-form
		.footer-menu-block
			border none
		.subscribe-form
			border-bottom 2px solid gris2
		.footer-menu
			ul
				padding-top 30px
				text-align right
				li
					margin-bottom 10px
		.disclaimer
			text-align right