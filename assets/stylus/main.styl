gris1 = #4c4c4e
rojo1 = #e7344a

.gris1
	color gris1
.rojo1
	color rojo1
.mayus
	text-transform uppercase
.bold
	font-weight bold
.rajdhani
	font-family 'Rajdhani', sans-serif

body
	background white
	color gris1
	font-family 'Roboto', sans-serif
#masthead
	background gris1
	position fixed
	width 100%
	z-index 100
	transition background .4s ease
	top 0
#masthead.transparent
	.navbar
		background rgba(gris1, .95) !important
		transition background .7s ease
.navbar
.menu-menu-top-container
	background gris1
	display flex
	justify-content flex-start
	align-items center
	border none
	margin-bottom 0
	z-index 100
	width 100%
	position absolute
	text-transform uppercase
	transition background .4s ease
	border-bottom 2px solid rojo1
.navbar-brand
	padding 10px 15px
.navbar-toggler
	background none
	border none
	width 30px
	height 30px
	position absolute
	right 15px
	padding 0
	transition background .4s ease
	.icon-bar
		background rojo1
		width 100%
		height 4px
		margin 5px 0
		display block
.navbar-collapse
	width 100%
	position fixed
	top 50px
	background gris1
	border none
	left 0
	padding-left 0
	li
		display block
		margin-bottom 5px
		margin-top 5px
		a
			color white
		&:first-of-type
			margin-top 15px
		&:last-of-type
			margin-bottom 15px
.main-banner-container
	height 460px
	background gris1
	display block
h1
	text-transform uppercase
	font-weight bold
	font-size 2.2em
	line-height 1em
	span
		color rojo1
		font-size .7em
h2.home-title
	font-size 1.2em